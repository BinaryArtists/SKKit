<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.spark.demo.thirdparty.calender.CalendarContainer
        android:id="@+id/view_calendar_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:tag="ptrRefreshView"
        app:rowHeight="@dimen/calendar_item_height">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:tag="month"></android.support.v4.view.ViewPager>

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:tag="week"></android.support.v4.view.ViewPager>


        <ListView
            android:id="@+id/list_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/win_bg_color"
            android:divider="@color/divider_line_color"
            android:dividerHeight="@dimen/standard_margin"
            android:tag="list" />

    </com.spark.demo.thirdparty.calender.CalendarContainer>


</LinearLayout>
