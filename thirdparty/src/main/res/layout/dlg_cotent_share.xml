<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share_weichat"
            style="@style/dialog_content_share_ll"
            android:layout_marginRight="@dimen/standard_margin">

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_icon_wechat_selector"
                android:text="@string/text_share_weixin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_share_wei_friend"
            style="@style/dialog_content_share_ll"
            android:layout_marginLeft="@dimen/standard_margin">

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_icon_wechatfriends_selector"
                android:text="@string/text_share_to_friend" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_qq"
            style="@style/dialog_content_share_ll"
            android:layout_marginLeft="@dimen/standard_margin"
            android:visibility="visible">

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_icon_qq_selector"
                android:text="@string/text_share_qq" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_sina_weibo"
            style="@style/dialog_content_share_ll"
            android:layout_marginLeft="@dimen/standard_margin"
            android:visibility="visible">

            <TextView
                style="@style/dialog_content_share_text"
                android:drawableTop="@drawable/share_icon_sinaweibo_selector"
                android:text="@string/text_share_sina" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>